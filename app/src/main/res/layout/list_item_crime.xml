<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/crime_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large_text_view"
        android:layout_marginTop="@dimen/margin_large_text_view"
        android:layout_marginEnd="@dimen/margin_small_text_view"
        android:text="@string/crime_title"
        android:textColor="@color/black"
        android:textSize="@dimen/crime_title_size"
        app:layout_constraintEnd_toStartOf="@+id/crime_solved_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/crime_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large_text_view"
        android:layout_marginTop="@dimen/margin_small_text_view"
        android:layout_marginEnd="@dimen/margin_small_text_view"
        android:text="@string/crime_date"
        app:layout_constraintEnd_toStartOf="@+id/crime_solved_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/crime_title" />

    <ImageView
        android:id="@+id/crime_solved_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_image"
        android:layout_marginEnd="@dimen/margin_image"
        android:layout_marginBottom="@dimen/margin_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.555"
        app:srcCompat="@mipmap/ic_solved" />

</androidx.constraintlayout.widget.ConstraintLayout>